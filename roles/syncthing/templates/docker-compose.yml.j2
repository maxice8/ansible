services:
  syncthing:
    image: syncthing/syncthing
    container_name: syncthing
    hostname: syncthing-for-{{ syncthing_username }}
    environment:
      - PUID={{ syncthing_user_id }}
      - PGID={{ syncthing_user_group_id }}
    volumes:
      - data:/var/syncthing
    ports:
      - 8384:8384 # Web UI
      - 22000:22000/tcp # TCP file transfers
      - 22000:22000/udp # QUIC file transfers
      - 21027:21027/udp # Receive local discovery broadcasts
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-fkLsS", "-m", "2", "127.0.0.1:8384/rest/noauth/health", "|", "grep", "-o", "--color=never", "OK"]
      interval: 30s
      timeout: 10s
      retries: 3

volumes:
  data:
    driver: local
