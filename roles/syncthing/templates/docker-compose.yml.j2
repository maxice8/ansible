services:
  ts-syncthing:
    image: tailscale/tailscale:latest
    hostname: syncthing
    container_name: ts-syncthing
    environment:
      - TS_AUTHKEY={{ syncthing_tsclient_key }}?ephemeral=false
      - TS_EXTRA_ARGS=--advertise-tags=tag:syncthing
      - TS_SERVE_CONFIG=/config/serve.json
      - TS_STATE_DIR=/var/lib/tailscale
      - TS_USERSPACE=false
    volumes:
      - tailscale-data-syncthing:/var/lib/tailscale
      - /dev/net/tun:/dev/net/tun
      - ./config:/config
    cap_add:
      - net_admin
      - sys_module
    restart: unless-stopped
  syncthing:
    image: syncthing/syncthing
    container_name: syncthing
    environment:
      - PUID={{ syncthing_user_id }}
      - PGID={{ syncthing_user_group_id }}
    depends_on:
      - ts-syncthing
    network_mode: service:ts-syncthing
    volumes:
      - data:/var/syncthing
    restart: unless-stopped
    healthcheck:
      test: curl -fkLsS -m 2 127.0.0.1:8384/rest/noauth/health | grep -o --color=never OK || exit 1
      interval: 15s
      timeout: 10s
      retries: 3

volumes:
  data:
    driver: local
  tailscale-data-syncthing:
