services:
  ts-uptime-kuma:
    image: tailscale/tailscale:stable
    hostname: uptime
    container_name: ts-uptime-kuma
    environment:
      - TS_AUTHKEY={{ container_tsclient_key }}?ephemeral=false
      - TS_EXTRA_ARGS=--advertise-tags=tag:container
      - TS_SERVE_CONFIG=/config/serve.json
      - TS_STATE_DIR=/var/lib/tailscale
      - TS_USERSPACE=false
    volumes:
      - ts-data:/var/lib/tailscale
    configs:
      - source: tailscale_serve.json
        target: /config/serve.json
    devices:
      - /dev/net/tun
    cap_add:
      - net_admin
    restart: always
    healthcheck:
      test: ["CMD-SHELL", "tailscale status"]
      interval: 1s
      timeout: 5s
      retries: 60
  uptime-kuma:
    image: louislam/uptime-kuma:2
    container_name: uptime-kuma
    depends_on:
      ts-uptime-kuma:
        condition: service_healthy
    network_mode: service:ts-uptime-kuma
    environment:
      - UPTIME_KUMA_PORT=3001
    volumes:
      # Support for monitoring docker containers
      - /var/run/docker.sock:/var/run/docker.sock
      - data:/app/data
    restart: always

volumes:
  data:
    driver: local
  ts-data:

configs:
  tailscale_serve.json:
    content: |
      {
          "TCP": {
              "443": {
                  "HTTPS": true
              }
          },
          "Web": {
              "$${TS_CERT_DOMAIN}:443": {
                  "Handlers": {
                      "/": {
                          "Proxy": "http://127.0.0.1:3001"
                      }
                  }
              }
          }
      }