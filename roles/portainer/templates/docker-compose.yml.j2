services:
  ts-portainer:
    image: tailscale/tailscale:latest
    hostname: portainer
    container_name: ts-portainer
    environment:
      - TS_AUTHKEY={{ portainer_tsclient_key }}?ephemeral=false
      - TS_EXTRA_ARGS=--advertise-tags=tag:portainer
      - TS_SERVE_CONFIG=/config/serve.json
      - TS_STATE_DIR=/var/lib/tailscale
      - TS_USERSPACE=false
    healthcheck:
      test: ["CMD-SHELL", "tailscale status"]
      interval: 1s
      timeout: 5s
      retries: 60
    volumes:
      - tailscale-data-portainer:/var/lib/tailscale
      - /srv/portainer/config:/config
    devices:
      - /dev/net/tun
    cap_add:
      - net_admin
    restart: unless-stopped
  portainer:
    image: portainer/portainer-ce:sts
    container_name: portainer
    restart: always
    depends_on:
      ts-portainer:
        condition: service_healthy
    network_mode: service:ts-portainer
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - data:/data

volumes:
  data:
  tailscale-data-portainer:
