services:
  ts-portainer:
    image: tailscale/tailscale:stable
    hostname: portainer
    container_name: ts-portainer
    environment:
      - TS_AUTHKEY={{ container_tsclient_key }}?ephemeral=false
      - TS_EXTRA_ARGS=--advertise-tags=tag:container
      - TS_SERVE_CONFIG=/config/serve.json
      - TS_STATE_DIR=/var/lib/tailscale
      - TS_USERSPACE=false
    healthcheck:
      test: ["CMD-SHELL", "tailscale status"]
      interval: 1s
      timeout: 5s
      retries: 60
    volumes:
      - ts-data:/var/lib/tailscale
    configs:
      - source: tailscale_serve.json
        target: /config/serve.json
    devices:
      - /dev/net/tun
    cap_add:
      - net_admin
    restart: always
  portainer:
    image: portainer/portainer-ce:lts
    container_name: portainer
    restart: always
    depends_on:
      ts-portainer:
        condition: service_healthy
    network_mode: service:ts-portainer
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - data:/data

volumes:
  data:
  ts-data:

configs:
  tailscale_serve.json:
    content: |
      {
          "TCP": {
              "443": {
                  "HTTPS": true
              }
          },
          "Web": {
              "$${TS_CERT_DOMAIN}:443": {
                  "Handlers": {
                      "/": {
                          "Proxy": "https+insecure://127.0.0.1:9443"
                      }
                  }
              }
          }
      }