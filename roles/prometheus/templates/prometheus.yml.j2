global:
  scrape_interval: 15s
  evaluation_interval: 15s
  external_labels:
    monitor: '{{ inventory_hostname }}'

alerting:
  alertmanagers:
    - static_configs:
        - targets: ['localhost:9093']

rule_files:
  - /etc/prometheus/rules/node-exporter-rules.yml

scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    scrape_timeout: 5s
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node'
    static_configs:
      - targets:
        {% for host, details in hostvars.items() if 'node-exporter' in details.services %}
        - '{{ host }}:9100'
        {% endfor %}
